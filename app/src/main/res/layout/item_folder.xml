<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/folder_item_checkbox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/custom_check_box"
        android:button="@android:color/transparent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/folder_item_text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/folder_item_text_view_count_of_memos"
        android:layout_toRightOf="@+id/folder_item_checkbox"
        android:singleLine="true"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/folder_item_text_view_count_of_memos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/folder_item_image_view"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/folder_item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/arrow_right" />

</RelativeLayout>