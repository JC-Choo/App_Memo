<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cnwlc.memo">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MemoApplication"
        android:allowBackup="true"
        android:icon="@drawable/memo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--android:name=".App.splash.SplashActivity"-->
        <activity android:name=".Test.TestActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--로그인 화면-->
        <activity android:name=".App.login.SignInActivity"
            android:screenOrientation="portrait"/>
        <!--회원가입 화면-->
        <activity android:name=".App.login.SignUpActivity"
            android:screenOrientation="portrait" />
        <!--메모 보기 화면-->
        <activity android:name=".App.main.mvp.MainActivity"
            android:screenOrientation="portrait" />
        <!--메모 화면-->
        <activity android:name=".App.main_memo.MemoActivity"
            android:screenOrientation="portrait" />


        <activity android:name=".App.alarm.AlarmMain"
            android:screenOrientation="portrait" />
        <activity android:name=".App.game.Timer_CountDown"
            android:screenOrientation="portrait" />
        <activity android:name=".App.game.OneToFifty"
            android:screenOrientation="portrait" />
        <activity android:name=".App.game.GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".App.game.Snake"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <receiver android:name=".App.alarm.AlarmReceive" />


        <!--테스트 화면-->
        <activity android:name=".App.etc.SecondActivity"
            android:screenOrientation="portrait" />

    </application>
</manifest>